<%- include('partials/head') %>
<main>
  <div class="outer-container">
    <div class="inner-container1">
      <h2>Resum√© Search</h2>
      <form action="/resumes/search" method="GET">
        <label for="search">Search by keyword:</label>
        <input type="text" id="search" name="query" />
        <select id="database" name="target">
          <option value="pg">PostgreSQL</option>
          <option value="m">MongoDB</option>
          <option value="all">Both</option>
        </select>
        <button type="submit">Search</button>
      </form>

      <%= resumes.length %> results for '<%= query %>':
      <ul>
        <% resumes.forEach(resume => { %>
        <li>
          #<%= resume.resume_id %> <%= resume.applicantname %> (source: <%=
          resume.source %>)<br />
          <textarea style="width: 800px; height: 200px" disabled>
<%= resume.resumetext %></textarea
          >
        </li>
        <% } ) %>
      </ul>
    </div>
  </div>
</main>
<%- include('partials/foot') %>
